<!DOCTYPE html>
<html>
<head>
    {% include '_head.twig' %}

    {# <link rel="icon" type="image/png" href="/app/{{ config('app') }}/public/img/favicon.ico"/>
    <link rel="shortcut icon" href="/app/{{ config('app') }}/public/img/favicon.ico"> #}
</head>
<body class="{{ _router.getCssName() }}">

{% include '_body.twig' %}

<div id="vue-app">

    <div class="fixed" style="top: 0; left: 0;">
        <a href="/">Pckg</a>
    </div>

    <div class="flex-tower flex-row@sm">

        {% block sidebar %}
            <aside class="position-sidebar">{{ sidebar | raw }}</aside>
        {% endblock %}
        <div class="flex">
            {% block content %}
                <main>{{ content | raw }}</main>{% endblock %}
        </div>
    </div>

    <footer class="container">
        {{ footer | raw }}
    </footer>
</div>

{% include '_foot.twig' %}

</body>
</html>